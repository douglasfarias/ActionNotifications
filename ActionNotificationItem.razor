<div class="toast fade show" role="alert" aria-live="assertive" aria-atomic="true">
  <div class="toast-header">
    <strong class="mr-auto">@_ActionNotification.Title</strong>
    <small class="text-muted">agora</small>
    <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close" @onclick="(() => this._CloseHandler.InvokeAsync(_ActionNotification))">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
  <div class="toast-body">
    @_ActionNotification.Message
  </div>
</div>

@code{
    [Parameter]
    public ActionNotification _ActionNotification { get; set; }

    [Parameter]
    public EventCallback<ActionNotification> _CloseHandler { get; set; }
}